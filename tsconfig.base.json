{
  "compilerOptions": {
    "noLib": true,
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "target": "ES2022",
    "preserveSymlinks": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false,
    "checkJs": false,
    "noEmit": true,
    "resolveJsonModule": false,
    "verbatimModuleSyntax": false,
    "noImplicitAny": false,
    "allowImportingTsExtensions": true
  }
}
